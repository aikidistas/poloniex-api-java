<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="900">
    <Appenders>
        <RollingFile
                name="rollingFile"
                fileName="logs/app.log"
                filePattern="logs/app.%d{yyyy-MM-dd HH-mm-ss}.log"
                ignoreExceptions="false"
                immediateFlush="false">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>
        <Async name="AsyncError">
            <AppenderRef ref="rollingFile"/>
        </Async>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} [%t] %p %c{1} - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.cf" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="api.wss" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.apache" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="trace">
            <AppenderRef ref="AsyncError"/>
        </Root>

        <!--        <Root level="error">-->
        <!--            <AppenderRef ref="Console"/>-->
        <!--        </Root>-->
    </Loggers>
</Configuration>