<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="900">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} [%t] %p %c{1} - %m%n"/>
        </Console>
        <File name="MyFile" fileName="logs/app.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
        <Async name="Async">
            <AppenderRef ref="MyFile"/>
        </Async>
    </Appenders>
    <Loggers>
        <Logger name="api" level="trace" additivity="true">
            <AppenderRef ref="MyFile"/>
        </Logger>
        <Logger name="org.aikidistas" level="trace" additivity="true">
            <AppenderRef ref="MyFile"/>
        </Logger>
        <Logger name="org.apache" level="info" additivity="true">
            <AppenderRef ref="MyFile"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="Async"/>
        </Root>
    </Loggers>
</Configuration>